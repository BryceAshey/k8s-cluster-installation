####################
# api-proxy config #
####################

frontend front-api-proxy
    bind {{ keepalived_vip }}:8443
    bind 127.0.0.1:8443
    mode tcp
    option tcplog
    timeout client 4h
    default_backend kube-api

backend kube-api
    mode tcp
    option tcp-check
    timeout connect 10s
    timeout server 4h
    balance roundrobin
    default-server inter 10s downinter 5s rise 2 fall 2 slowstart 60s maxconn 250 maxqueue 256 weight 100
    server rockpi4c 192.168.1.111:6443 check
